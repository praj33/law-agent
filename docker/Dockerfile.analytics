# Law Agent Analytics API Dockerfile
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV DEBIAN_FRONTEND=noninteractive

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    software-properties-common \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install ML dependencies
RUN pip install --no-cache-dir \
    scikit-learn==1.3.2 \
    matplotlib==3.8.2 \
    seaborn==0.13.0 \
    numpy==1.24.4 \
    pandas==2.1.4

# Copy application code
COPY analytics_api.py .
COPY analytics_collector.py .
COPY analytics_database.py .
COPY analytics_engine.py .

# Create necessary directories
RUN mkdir -p /app/analytics_data /app/analytics_data/events /app/analytics_data/sessions \
    /app/analytics_data/legal_routes /app/analytics_data/glossary /app/analytics_data/timelines \
    /app/analytics_data/performance /app/logs

# Create non-root user
RUN adduser --disabled-password --gecos '' appuser && \
    chown -R appuser:appuser /app
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Expose port
EXPOSE 8002

# Run the application
CMD ["python", "-m", "uvicorn", "analytics_api:app", "--host", "0.0.0.0", "--port", "8002", "--workers", "2"]
