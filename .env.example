# Database Configuration
DATABASE_URL=sqlite:///./law_agent.db
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML Configuration
HUGGINGFACE_TOKEN=your-huggingface-token
OPENAI_API_KEY=your-openai-key-optional

# Grok AI Configuration (for real legal solutions)
GROK_API_KEY=your-grok-api-key-here
USE_GROK_AI=true

# Legal Data Sources
LEGAL_API_KEY=your-legal-api-key
COURT_DATA_API=your-court-data-api

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/law_agent.log

# Reinforcement Learning
RL_MODEL_PATH=models/rl_policy
RL_LEARNING_RATE=0.001
RL_EXPLORATION_RATE=0.1

# Vector Database
CHROMA_PERSIST_DIRECTORY=./chroma_db
VECTOR_DIMENSION=384

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
