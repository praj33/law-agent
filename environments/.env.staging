# Staging Environment Configuration
ENVIRONMENT=staging
NODE_ENV=production
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ANALYTICS_PORT=8002
DOCUMENTS_PORT=8001

# Database Configuration
DATABASE_URL=postgresql://law_agent_user:staging_password@staging-db.law-agent.com:5432/law_agent_staging
ANALYTICS_DATABASE_URL=postgresql://law_agent_user:staging_password@staging-db.law-agent.com:5432/analytics_staging
DOCUMENTS_DATABASE_URL=postgresql://law_agent_user:staging_password@staging-db.law-agent.com:5432/documents_staging

# Redis Configuration
REDIS_URL=redis://staging-redis.law-agent.com:6379
REDIS_PASSWORD=staging-redis-password

# Supabase Configuration (Staging Project)
SUPABASE_URL=https://staging-law-agent.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.staging-anon-key
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.staging-service-key
SUPABASE_JWT_SECRET=staging-jwt-secret

# Frontend URLs
FRONTEND_URL=https://staging-law-agent.vercel.app
ALLOWED_ORIGINS=https://staging-law-agent.vercel.app,https://staging.law-agent.com

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed

# Security Configuration
JWT_SECRET=staging-jwt-secret-key-secure
ENCRYPTION_KEY=staging-encryption-key-32-chars
SESSION_SECRET=staging-session-secret-key

# External Services (Staging Keys)
OPENAI_API_KEY=sk-staging-openai-key
ANTHROPIC_API_KEY=sk-ant-staging-key

# Email Configuration (Staging)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=staging-sendgrid-api-key
FROM_EMAIL=staging@law-agent.com

# Monitoring & Analytics (Staging)
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-STAGING123
HOTJAR_ID=staging-hotjar-id

# Legal Configuration
DEFAULT_JURISDICTION=US
SUPPORTED_LANGUAGES=en,es,fr
LEGAL_DISCLAIMER_URL=https://staging.law-agent.com/disclaimer

# Performance Configuration
API_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Staging Configuration
DEBUG_MODE=false
MOCK_API=false
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.law-agent.com.crt
SSL_KEY_PATH=/etc/ssl/private/staging.law-agent.com.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=law-agent-staging-backups
