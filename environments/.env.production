# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://law_agent_user:production_password@prod-db.law-agent.com:5432/law_agent_production
ANALYTICS_DATABASE_URL=postgresql://law_agent_user:production_password@prod-db.law-agent.com:5432/analytics_production
DOCUMENTS_DATABASE_URL=postgresql://law_agent_user:production_password@prod-db.law-agent.com:5432/documents_production

# Redis Configuration (Production Cluster)
REDIS_URL=redis://prod-redis.law-agent.com:6379
