# Frontend URLs
FRONTEND_URL=https://law-agent.com
ALLOWED_ORIGINS=https://law-agent.com,https://www.law-agent.com

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads
PROCESSED_DIR=/app/processed

# Security Configuration (Production Secrets)
JWT_SECRET=production-jwt-secret-key-very-secure-64-chars-long
ENCRYPTION_KEY=production-encryption-key-32-chars
SESSION_SECRET=production-session-secret-key-secure

# External Services (Production Keys)
OPENAI_API_KEY=sk-production-openai-key
ANTHROPIC_API_KEY=sk-ant-production-key

# Email Configuration (Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=production-sendgrid-api-key
FROM_EMAIL=noreply@law-agent.com

# Monitoring & Analytics (Production)
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project
GOOGLE_ANALYTICS_ID=G-PROD123456
HOTJAR_ID=production-hotjar-id

# Legal Configuration
DEFAULT_JURISDICTION=US
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt
LEGAL_DISCLAIMER_URL=https://law-agent.com/legal/disclaimer

# Performance Configuration (Production Optimized)
API_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=500
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW=3600

# Production Configuration
DEBUG_MODE=false
MOCK_API=false
ENABLE_SWAGGER=false
ENABLE_CORS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/law-agent.com.crt
SSL_KEY_PATH=/etc/ssl/private/law-agent.com.key
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=https://cdn.law-agent.com
STATIC_ASSETS_URL=https://assets.law-agent.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_S3_BUCKET=law-agent-production-backups
BACKUP_ENCRYPTION_KEY=production-backup-encryption-key

# Scaling Configuration
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=2
MAX_INSTANCES=20
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Compliance Configuration
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
HIPAA_COMPLIANCE=false
DATA_RETENTION_DAYS=2555
AUDIT_LOGGING=true

# Third-party Integrations
STRIPE_PUBLIC_KEY=pk_live_production_stripe_key
STRIPE_SECRET_KEY=sk_live_production_stripe_key
TWILIO_ACCOUNT_SID=production_twilio_sid
TWILIO_AUTH_TOKEN=production_twilio_token
